<Controls:MetroWindow x:Class="MP3Player.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:my="clr-namespace:MP3Player.MyControls"
                      Title="MainWindow" 
                      Height="{Binding Path=WindowHeight}"
                      Width="{Binding Path=WindowWidth}" ShowTitleBar="False" Background="Gray">
    <Grid Name="SongInfo" MouseWheel="SongInfo_MouseWheel" MouseRightButtonDown="SongInfo_MouseRightButtonDown">
        <StackPanel HorizontalAlignment="Center">
            <my:CoverFlow x:Name="MainCoverFlow"></my:CoverFlow>
            <my:MainPanel ></my:MainPanel>
        </StackPanel>
    </Grid>

</Controls:MetroWindow>