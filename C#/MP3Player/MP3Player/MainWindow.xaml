<Controls:MetroWindow x:Class="MP3Player.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:my="clr-namespace:MP3Player.MyControls"
                      Title="MainWindow" 
                      ShowTitleBar="False" Background="Gray">
    <Grid Name="SongInfo" MouseWheel="SongInfo_MouseWheel" MouseRightButtonDown="SongInfo_MouseRightButtonDown">
        <my:CoverFlow HorizontalAlignment="Left" VerticalAlignment="Top" MinHeight="400" MinWidth="300" MaxHeight="400" MaxWidth="300" x:Name="MainCoverFlow"></my:CoverFlow>
        <my:StarPanel HorizontalAlignment="Center" VerticalAlignment="Center"></my:StarPanel>
    </Grid>

</Controls:MetroWindow>