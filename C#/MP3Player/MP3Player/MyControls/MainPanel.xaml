<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP3Player.MyControls" x:Class="MP3Player.MyControls.MainPanel" 
             mc:Ignorable="d"
             >
    <StackPanel VerticalAlignment="Bottom">
        <ProgressBar  Height="15" Margin="10,10,10,10" VerticalAlignment="Top" Value="30"  Name="A" Foreground="Aquamarine"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <local:PlayControl MinHeight="80" MaxHeight="80" Grid.Column="1" Margin="20,20,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
            <Label Grid.Column="0" Margin="10,10,10,30" VerticalAlignment="Bottom" Foreground="Blue" HorizontalAlignment="Left" FontFamily="Sitka Display" FontSize="36">0:00</Label>
            <ProgressBar Grid.Column="2" HorizontalAlignment="Right" Height="15" Margin="10,10,10,40" VerticalAlignment="Bottom" Value="50" Width="200" Name="B" Foreground="Green"/>
        </Grid>
    </StackPanel>
</UserControl>
